<h2 class="text-lg font-medium pb-4">Create New Post</h2>
<form class="card-body new-post-form" id="new-post-form">
  <div class="mb-4">
    <label
      for="post-title"
      class="block font-medium text-gray-700 mb-2"
    >Title</label>
    <input
      type="text"
      id="post-title"
      name="post-title"
      class="form-input rounded-md shadow-sm"
    />
  </div>
  <div class="mb-4">
    <label
      for="content"
      class="block font-medium text-gray-700 mb-2"
    >Content</label>
    <input
      id="content"
      name="content"
      class="form-input rounded-md shadow-sm"
    />
  </div>
  <button type="submit" class="btn">Create</button>
</form>

<script src="/js/add-post.js"></script>